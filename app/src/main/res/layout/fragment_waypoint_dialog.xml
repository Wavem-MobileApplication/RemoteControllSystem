<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_waypoint_dialog"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_contents_background"
    android:clickable="true"
    tools:context=".ui.fragment.route.WaypointDialogFragment"
    tools:ignore="KeyboardInaccessibleWidget">


    <EditText
        android:id="@+id/tv_waypoint_name"
        style="@style/EditTextTitleStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="@string/no_title_ko"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/btn_save_waypoint"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginEnd="16dp"
        style="@style/IconButtonLv1"
        android:src="@drawable/icon_save"
        app:layout_constraintBottom_toBottomOf="@+id/btn_add_destination"
        app:layout_constraintEnd_toStartOf="@+id/btn_add_destination"
        app:layout_constraintTop_toTopOf="@+id/btn_add_destination" />

    <ImageButton
        android:id="@+id/btn_add_destination"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginEnd="32dp"
        style="@style/IconButtonLv1"
        android:src="@drawable/icon_add"
        app:layout_constraintBottom_toBottomOf="@+id/tv_waypoint_name"
        app:layout_constraintEnd_toStartOf="@+id/btn_exit_waypoint_dialog"
        app:layout_constraintTop_toTopOf="@+id/tv_waypoint_name" />

    <ImageButton
        android:id="@+id/btn_exit_waypoint_dialog"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginEnd="8dp"
        style="@style/IconButtonLv1"
        android:src="@drawable/icon_exit"
        app:layout_constraintBottom_toBottomOf="@+id/btn_add_destination"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btn_add_destination" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_destination"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_waypoint_name"
        tools:listitem="@layout/item_list_destination" />

</androidx.constraintlayout.widget.ConstraintLayout>