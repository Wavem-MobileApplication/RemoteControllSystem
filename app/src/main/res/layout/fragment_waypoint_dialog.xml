<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layout_waypoint_dialog"
    android:clickable="true"
    android:background="@color/color_contents_background"
    tools:context=".ui.fragment.route.WaypointDialogFragment"
    tools:ignore="KeyboardInaccessibleWidget">


    <TextView
        android:id="@+id/tv_waypoint_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="@string/no_title_ko"
        android:textSize="24sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/et_waypoint_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:padding="0dp"
        android:minWidth="50dp"
        android:background="@drawable/underline_edit_text"
        android:text="@string/no_title_ko"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:visibility="invisible"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="Autofill,LabelFor,TextFields" />

    <ImageButton
        android:id="@+id/btn_edit_waypoint_title"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="4dp"
        android:background="@drawable/ripple_click_button_white_no_padding"
        android:scaleType="fitCenter"
        android:src="@drawable/icon_edit_pencil"
        app:layout_constraintBottom_toBottomOf="@+id/tv_waypoint_name"
        app:layout_constraintStart_toEndOf="@+id/tv_waypoint_name"
        app:layout_constraintTop_toTopOf="@+id/tv_waypoint_name"
        android:contentDescription="@null" />

    <ImageButton
        android:id="@+id/btn_save_waypoint"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/ripple_click_button_white_no_padding"
        android:scaleType="fitCenter"
        android:src="@drawable/icon_save"
        app:layout_constraintBottom_toBottomOf="@+id/btn_add_destination"
        app:layout_constraintEnd_toStartOf="@+id/btn_add_destination"
        app:layout_constraintTop_toTopOf="@+id/btn_add_destination"
        android:contentDescription="@null" />

    <ImageButton
        android:id="@+id/btn_add_destination"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/ripple_click_button_white_no_padding"
        android:scaleType="fitCenter"
        android:src="@drawable/icon_add"
        app:layout_constraintBottom_toBottomOf="@+id/tv_waypoint_name"
        app:layout_constraintEnd_toStartOf="@+id/btn_exit_waypoint_dialog"
        app:layout_constraintTop_toTopOf="@+id/tv_waypoint_name"
        android:contentDescription="@null" />

    <ImageButton
        android:id="@+id/btn_exit_waypoint_dialog"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/ripple_click_button_white_no_padding"
        android:scaleType="fitCenter"
        android:src="@drawable/icon_exit"
        app:layout_constraintBottom_toBottomOf="@+id/btn_add_destination"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btn_add_destination"
        android:contentDescription="@null" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_destination"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_waypoint_name"
        tools:listitem="@layout/item_list_destination" />

</androidx.constraintlayout.widget.ConstraintLayout>